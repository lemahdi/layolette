<% provide(:title, 'Réservations') %>

<% if @rameur %>
	<h1>Mes réservations</h1>
<% else %>
	<h1>Liste des réservations</h1>
<% end %>

<% if notice %>
	<div class="row">
		<div class="span8">
			<div id="notice">
				<p class="alert alert-success"><%= notice %></p>
			</div>
		</div>
	</div>
<% end %>

<% if alert %>
	<div class="row">
		<div class="span8">
			<div id="notice">
				<p class="alert alert-block"><%= alert %></p>
			</div>
		</div>
	</div>
<% end %>

<%= will_paginate_fr @reservations %>

<div class="center hero-unit">
  <%= render 'table' %>
</div>

